<?xml version="1.0" encoding="utf-8"?>
<com.hyl.view.SwipeMenuView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipe_menu"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="65dp">

    <RelativeLayout
        android:id="@+id/accounts_item_layout"
        android:background="@drawable/bg_click"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/accounts_image"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_marginStart="15dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/accounts_image"
            android:layout_marginStart="11dp">
            <TextView
                android:id="@+id/accounts_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="现金账户"
                android:textColor="@color/text_black3"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/accounts_arrow_right"
            android:layout_marginEnd="11dp">
            <TextView
                android:id="@+id/accounts_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="余额"
                android:textSize="16sp"
                android:textColor="@color/text_black6" />
        </LinearLayout>


        <ImageView
            android:id="@+id/accounts_arrow_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/arrow_right"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:scaleType="centerInside" />

        <View
            android:layout_marginStart="15dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DCDCDC" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/accounts_change"
            android:text="修改"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/text_orange"/>

        <Button
            android:id="@+id/accounts_delete"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/text_red"/>

    </LinearLayout>

</com.hyl.view.SwipeMenuView>

