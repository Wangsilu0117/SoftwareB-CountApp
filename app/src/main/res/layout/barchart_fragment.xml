<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/barchart_top_choose"></include>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/bar_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:scrollbars="none">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:paddingBottom="10dp"
                    >

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/bar_chart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />


                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/layout_bar_typedata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/bar_item_type"
                        android:paddingLeft="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        >


                        <TextView
                            android:id="@+id/bar_detail_title"
                            android:layout_toRightOf="@+id/pie_layout_circle"
                            android:layout_marginLeft="11dp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="类型"
                            android:textColor="@color/text_black3"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/bar_detail_in_money"
                            android:layout_toLeftOf="@+id/bar_detail_out_money"
                            android:layout_marginRight="15dp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:text="+0.00"
                            android:textColor="@color/text_black3"
                            android:textSize="13sp"/>

                        <TextView
                            android:id="@+id/bar_detail_out_money"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:text="-0.00"
                            android:textColor="@color/text_black3"
                            android:textSize="13sp"/>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#DCDCDC"></View>


                    <androidx.recyclerview.widget.RecyclerView

                        android:id="@+id/bar_detail_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </androidx.recyclerview.widget.RecyclerView>>


                </LinearLayout>




            </LinearLayout>

        </ScrollView>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>>


</LinearLayout>
