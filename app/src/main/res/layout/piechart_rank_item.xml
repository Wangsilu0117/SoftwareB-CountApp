<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:paddingStart="12dp"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/pie_rankitem_rank"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textColor="@color/text_black3"
        android:textSize="14sp"/>


    <TextView
        android:id="@+id/pie_rankitem_account"
        android:layout_marginStart="19dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="现金账户"
        android:textColor="@color/text_black3"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/pie_rankitem_member"
        android:layout_toRightOf="@+id/pie_rankitem_account"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本人"
        android:textColor="@color/text_black6"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/pie_rankitem_time"
        android:layout_toRightOf="@+id/pie_rankitem_member"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020-10-28"
        android:textColor="@color/text_black6"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/pie_rankitem_money"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.00"
        android:textColor="@color/text_black3"
        android:textSize="18sp"/>


    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"/>

</RelativeLayout>

